<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ComposeModeActivity">

    <TextView
        android:id="@+id/txtInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/strEnterInput"
        android:padding="8dp"
        />

    <SeekBar
        android:id="@+id/skbarVolume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="9"
        android:padding="8dp"

        app:layout_constraintTop_toBottomOf="@id/txtInput"/>

    <SeekBar
        android:id="@+id/skbarDuration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:padding="8dp"

        app:layout_constraintTop_toBottomOf="@id/skbarVolume"
        />

    <SeekBar
        android:id="@+id/skbarNotes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="12"
        android:padding="8dp"

        app:layout_constraintTop_toBottomOf="@id/skbarDuration"/>

    <Button
        android:id="@+id/btnAddNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add note"

        app:layout_constraintBottom_toTopOf="@id/btnSend"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <Button
        android:id="@+id/btnSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/strConnect"
        android:onClick="connect"

        app:layout_constraintBottom_toTopOf="@id/btnClear"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/strClear"
        android:onClick="clearText"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

</android.support.constraint.ConstraintLayout>